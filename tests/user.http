@host = https://asset-management-byu.onrender.com
#@host = http://localhost:3000

### Login user
# @name login
post {{host}}/auth/login
Content-Type: application/json

{
  "username": "administrator",
  "password": "Administrator1234$"
}

### Create user
POST {{host}}/users
Content-Type: application/json
Authorization: Bearer {{access_token}}

{
  "user": {
    "name": "Rodrigo Fabian",
    "userid": "61052241"
  }
}

### Get user
@access_token = {{login.response.body.token}}
GET {{host}}/users
Authorization: Bearer {{access_token}}


### Get single user
@access_token = {{login.response.body.token}}
GET {{host}}/users/3
Authorization: Bearer {{access_token}}


### Get single user with details
@access_token = {{login.response.body.token}}
GET {{host}}/users/3/details
Authorization: Bearer {{access_token}}


### Get user assets
@access_token = {{login.response.body.token}}
GET {{host}}/users/4/assets
Authorization: Bearer {{access_token}}


### Release user assets
@access_token = {{login.response.body.token}}
post {{host}}/users/4/assets/release
Authorization: Bearer {{access_token}}


### Assign user assets
@access_token = {{login.response.body.token}}
post {{host}}/users/5/assets/assign
Authorization: Bearer {{access_token}}
Content-Type: application/json

{
  "assets": [1,3]
}

### Update user
@access_token = {{login.response.body.token}}
PUT {{host}}/users/5
Content-Type: application/json
Authorization: Bearer {{access_token}}

{
  "enabled": 1
}

### Delete user
DELETE {{host}}/users/6
Content-Type: application/json
Authorization: Bearer {{access_token}}